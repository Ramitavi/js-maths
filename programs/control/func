# Function declaration
func hi() { println("Hello"); }
hi();

# Function expression (remember semicolon at end)
hi = func() { println("Hello"); };
hi();

# With arguments
func add(a, b) { a + b; }
println(add(5 + i, 3));

# With argument types
func add(a: real, b: real) { a + b; }
println(add(5 + i, 3));